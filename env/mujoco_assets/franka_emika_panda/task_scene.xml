<mujoco model="panda pick-place task">
  <include file="panda.xml"/>

  <statistic center="0.6 0 0.4" extent="1.5"/>

  <option timestep="0.002" integrator="implicitfast" iterations="50" ls_iterations="100">
    <flag eulerdamp="disable"/>
  </option>

  <default>
    <default class="object">
      <geom friction="2.0 0.1 0.01" solimp="0.998 0.998 0.001" solref="0.002 1" condim="4"/>
    </default>
  </default>

  <custom>
    <numeric data="12" name="max_contact_points"/>
  </custom>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light name="top_light" pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" contype="1"/>
    
    <!-- Pick-and-place task: colored spheres on table -->
    <!-- Positioned at 0.5m (proven working position with successful grasp) -->
    <!-- Higher friction and softer contacts for better grasping -->
    <body name="object_body_red" pos="0.5 0 0.03">
      <freejoint/>
      <geom name="object_geom_red" type="sphere" size="0.03" rgba="0.9 0.2 0.2 1"
            class="object" contype="2" conaffinity="1" mass="0.05"/>
      <site name="object_site_red" pos="0 0 0" size="0.01" rgba="1 0 0 0"/>
    </body>

    <body name="object_body_green" pos="0.48 0.12 0.03">
      <freejoint/>
      <geom name="object_geom_green" type="sphere" size="0.03" rgba="0.2 0.9 0.2 1"
            class="object" contype="2" conaffinity="1" mass="0.05"/>
      <site name="object_site_green" pos="0 0 0" size="0.01" rgba="0 1 0 0"/>
    </body>

    <body name="object_body_blue" pos="0.52 -0.12 0.03">
      <freejoint/>
      <geom name="object_geom_blue" type="sphere" size="0.03" rgba="0.2 0.4 1 1"
            class="object" contype="2" conaffinity="1" mass="0.05"/>
      <site name="object_site_blue" pos="0 0 0" size="0.01" rgba="0 0 1 0"/>
    </body>

    <body name="object_body_yellow" pos="0.47 0.08 0.03">
      <freejoint/>
      <geom name="object_geom_yellow" type="sphere" size="0.03" rgba="1 1 0.2 1"
            class="object" contype="2" conaffinity="1" mass="0.05"/>
      <site name="object_site_yellow" pos="0 0 0" size="0.01" rgba="1 1 0 0"/>
    </body>

    <body name="object_body_purple" pos="0.51 -0.08 0.03">
      <freejoint/>
      <geom name="object_geom_purple" type="sphere" size="0.03" rgba="0.6 0.2 1 1"
            class="object" contype="2" conaffinity="1" mass="0.05"/>
      <site name="object_site_purple" pos="0 0 0" size="0.01" rgba="0.6 0 1 0"/>
    </body>
    
    <!-- Goal bin - positioned closer to robot base for easier center placement -->
    <body name="bin" pos="0.55 0.45 0.0">
      <geom name="bin_bottom" type="box" size="0.12 0.12 0.01" rgba="0.3 0.3 0.3 1" pos="0 0 0.01"/>
      <geom name="bin_wall_x+" type="box" size="0.01 0.12 0.05" rgba="0.3 0.3 0.3 1" pos="0.13 0 0.06"/>
      <geom name="bin_wall_x-" type="box" size="0.01 0.12 0.05" rgba="0.3 0.3 0.3 1" pos="-0.13 0 0.06"/>
      <geom name="bin_wall_y+" type="box" size="0.12 0.01 0.05" rgba="0.3 0.3 0.3 1" pos="0 0.13 0.06"/>
      <geom name="bin_wall_y-" type="box" size="0.12 0.01 0.05" rgba="0.3 0.3 0.3 1" pos="0 -0.13 0.06"/>
      <site name="bin_site" pos="0 0 0.08" size="0.02" rgba="1 1 0 0"/>
    </body>
    
    <!-- Optional occluder -->
    <body name="occluder_body" pos="0.55 -0.2 0.15">
      <freejoint/>
      <geom name="occluder_geom" type="box" size="0.05 0.05 0.05" rgba="0.7 0.7 0.7 0.5"/>
    </body>
    
    <!-- Overhead camera looking straight down -->
    <camera name="top" mode="fixed" pos="0.6 0 1.0" euler="180 0 0" fovy="55"/>

  </worldbody>

  <!-- Keyframes for pick-and-place (adapted from Menagerie mjx_single_cube.xml) -->
  <!-- qpos order: 7 arm joints + 2 gripper joints + 5 objects (7 DOF each: xyz + quat wxyz) + 1 occluder (7 DOF) = 51 total -->
  <keyframe>
    <!-- Home: Forward-reaching comfortable pose -->
    <key name="home"
      qpos="0 0.3 0 -1.57079 0 2.0 -0.7853 0.04 0.04
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0 0.3 0 -1.57079 0 2.0 -0.7853 255"/>

    <!-- Pre-grasp: Above object at safe height (adapted from "pickup" in Menagerie) -->
    <key name="pre_grasp"
      qpos="0.29 0.45 -0.14 -2.1 -0.03 2.5 -0.49 0.04 0.04
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0.29 0.45 -0.14 -2.1 -0.03 2.5 -0.49 255"/>

    <!-- Grasp: Lowered to object level -->
    <key name="grasp"
      qpos="0.29 0.51 -0.14 -2.18 -0.03 2.52 -0.49 0.04 0.04
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0.29 0.51 -0.14 -2.18 -0.03 2.52 -0.49 255"/>

    <!-- Grasp closed: Same position, gripper closed -->
    <key name="grasp_closed"
      qpos="0.29 0.51 -0.14 -2.18 -0.03 2.52 -0.49 0.0 0.0
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0.29 0.51 -0.14 -2.18 -0.03 2.52 -0.49 0"/>

    <!-- Lift: Raised back to safe height -->
    <key name="lift"
      qpos="0.29 0.45 -0.14 -2.1 -0.03 2.5 -0.49 0.0 0.0
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0.29 0.45 -0.14 -2.1 -0.03 2.5 -0.49 0"/>

    <!-- Transport: Move toward bin (higher Z, forward X) -->
    <key name="transport"
      qpos="0.4 0.3 -0.1 -1.9 0.0 2.3 -0.6 0.0 0.0
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0.4 0.3 -0.1 -1.9 0.0 2.3 -0.6 0"/>

    <!-- Place: Lower into bin -->
    <key name="place"
      qpos="0.5 0.2 -0.08 -1.8 0.05 2.2 -0.65 0.0 0.0
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0.5 0.2 -0.08 -1.8 0.05 2.2 -0.65 0"/>

    <!-- Place open: Release object -->
    <key name="place_open"
      qpos="0.5 0.2 -0.08 -1.8 0.05 2.2 -0.65 0.04 0.04
            0.5 0 0.03 1 0 0 0
            0.48 0.12 0.03 1 0 0 0
            0.52 -0.12 0.03 1 0 0 0
            0.47 0.08 0.03 1 0 0 0
            0.51 -0.08 0.03 1 0 0 0
            0.55 -0.2 0.15 1 0 0 0"
      ctrl="0.5 0.2 -0.08 -1.8 0.05 2.2 -0.65 255"/>
  </keyframe>

</mujoco>

